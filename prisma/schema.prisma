generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @unique @default(uuid())
  name     String
  email    String   @unique
  phone    String
  password String
  role     UserRole
  isActive Boolean  @default(true) @map("is_active")

  tickets UserTicket[]
  booths  UserBooth[]

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@index([id, email], name: "user_index")
  @@map("users")
}

enum UserRole {
  ADMIN
  CLIENT
}

model UserTicket {
  id       String @id @unique @default(uuid())
  userId   String
  ticketId String

  user   User   @relation(fields: [userId], references: [id])
  ticket Ticket @relation(fields: [ticketId], references: [id])

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@index([id, userId, ticketId])
  @@map("user_tickets")
}

model UserBooth {
  id                  String @id @unique @default(uuid())
  userId              String
  boothId             String
  wristbands          Int
  wristbandsAllocated Int    @default(0) @map("wristbands_allocated")

  user  User  @relation(fields: [userId], references: [id])
  booth Booth @relation(fields: [boothId], references: [id])

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@index([id, userId, boothId])
  @@map("user_booths")
}

model Event {
  id          String   @id @unique @default(uuid())
  name        String
  image       String
  description String
  location    String
  date        DateTime
  slug        String   @unique
  isActive    Boolean  @default(true) @map("is_active")

  tickets Ticket[]
  booths  Booth[]

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@index([id, slug])
  @@map("events")
}

model Ticket {
  id       String @id @unique @default(uuid())
  name     String
  price    Float
  discount Float?
  quantity Int
  eventId  String

  event       Event        @relation(fields: [eventId], references: [id])
  userTickets UserTicket[]

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@index([id, eventId])
  @@map("tickets")
}

model Booth {
  id          String  @id @unique @default(uuid())
  name        String
  location    String
  price       Float
  discount    Float?
  wristbands  Int
  eventId     String
  isAvailable Boolean @default(true)

  event      Event       @relation(fields: [eventId], references: [id])
  userBooths UserBooth[]

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@index([id, eventId])
  @@map("booths")
}
